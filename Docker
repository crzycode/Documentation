install and run Lates Sql container
docker run -d --name panah -e 'ACCEPT_EULA=Y' -e 'MSSQL_SA_PASSWORD=panah@123' -p 1433:1433 mcr.microsoft.com/mssql/server:2022-latest
docker run --name sqlserver --hostname panah -e "ACCEPT_EULA=Y" -e "MSSQL_SA_PASSWORD=panah@321" -p 1433:1433 -d microsoft/mssql-server-linux:2019-latest 

dotnet project

#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["WebApplication7/WebApplication7.csproj", "WebApplication7/"]
RUN dotnet restore "WebApplication7/WebApplication7.csproj"
COPY . .
WORKDIR "/src/WebApplication7"
RUN dotnet build "WebApplication7.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "WebApplication7.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WebApplication7.dll"]
