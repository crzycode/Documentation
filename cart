                        for (int i = 0; i < new_product_split.Length; i++)
                        {
                            string[] split_product = new_product_split[i].Split(new char[] { '|', ':' });

                            new_Product_id.Add(split_product[0]);
                            new_Count.Add(Convert.ToInt32(split_product[1]));

