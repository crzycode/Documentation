                                exist_all_product_amount = exist_all_product_amount + amount_;
                                exist_product.product.Add($"{c.Product_id}", $"{count_}|{amount_}");
                            }
                        }
                        else
                        {
                            var json_data = File.ReadAllText($"D:\\Data\\Electronics\\{c.Product_id}.json");

                            var json = JsonConvert.DeserializeObject<Electronics>(json_data);

                            int count_ = c.count;
