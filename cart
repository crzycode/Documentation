                                exist_all_product_count = exist_all_product_count - count;

                                int amount_ = json.offer_price * c.count;
                                exist_product.product[$"{c.Product_id}"] = Convert.ToString(c.count + "|" + amount_);


                            }
                            else
                            {
                                if (c.count <= count)
                                {
                                    int count_ = count + c.count;
                                    int amount_ = json.offer_price * c.count;

                                    amount = amount_ + amount;

                                    exist_all_product_amount  = exist_all_product_amount + amount_;
                                    exist_all_product_count = exist_all_product_count + c.count;

                                    exist_product.product[$"{c.Product_id}"] = Convert.ToString(count_ + "|" + amount);
                                }
                            }
                        }
                    }
                    else {

                        string[] product_id = c.Product_id.Split('-');
                        if (product_id.Length > 1)
                        {
                            int file_number = Convert.ToInt32(product_id[1]);
                            if (file_number <= 155638)
                            {
                                var json_data = File.ReadAllText($"D:\\Data\\Men\\{c.Product_id}.json");

                                var json = JsonConvert.DeserializeObject<ajio>(json_data);

                                int count_ = c.count;
                                int amount_ = json.offer_price * count_;
                                exist_all_product_count = exist_all_product_count + count_;
                                exist_all_product_amount = exist_all_product_amount + amount_;
                                exist_product.product.Add($"{c.Product_id}", $"{count_}|{amount_}");
                            }
                            else
                            {
