                                    }
                                }
                            }

                           

                        }
                        else {
                            var json_data = File.ReadAllText($"D:\\Data\\Women\\{c.Product_id}.json");
                            var json = JsonConvert.DeserializeObject<ajio>(json_data);
                            string P_id = exist_product.product[$"{c.Product_id}"];
