initalizer
void main() async {
  await Hive.initFlutter();
  await Hive.openBox("Mydata");
  runApp(MyApp());
}

class _MyAppState extends State<MyApp> {
  late final Box box;
  @override
  void initState() {
    super.initState();
    box = Hive.box("Mydata");
  }

  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
    );
  }
}

